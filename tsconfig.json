{
  "include": ["src"],
  "compilerOptions": {
    "target": "ES5",
    "lib": ["DOM", "ES5", "ScriptHost", "ES2015.Promise"],
    "module": "CommonJS",
    "baseUrl": "src",
    "allowJs": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  }
}
